{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "CLERK_SECRET_KEY",
    "CLERK_PUBLISHABLE_KEY",
    "NODE_ENV",
    "DB_HOST",
    "DB_PORT",
    "DB_USERNAME",
    "DB_PASSWORD",
    "DB_DATABASE",
    "FRONTEND_URL"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "lint": {},
    "test": {},
    "test:e2e": {}
  }
}